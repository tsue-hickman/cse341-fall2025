{
    "swagger": "2.0",
    "info": {
        "title": "Movie Tracker API",
        "description": "API for managing movie information",
        "version": "1.0.0"
    },
    "host": "cse341-fall2025.onrender.com",
    "basePath": "/",
    "schemes": [
        "https"
    ],
    "paths": {
        "/movies": {
            "get": {
                "description": "Get all movies",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "post": {
                "description": "Create a new movie",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "example": "Inception"
                                },
                                "genre": {
                                    "type": "string",
                                    "example": "Sci-Fi"
                                },
                                "year": {
                                    "type": "number",
                                    "example": 2010
                                },
                                "rating": {
                                    "type": "number",
                                    "example": 8.8
                                },
                                "director": {
                                    "type": "string",
                                    "example": "Christopher Nolan"
                                }
                            },
                            "required": [
                                "title",
                                "genre",
                                "year"
                            ]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/movies/{id}": {
            "get": {
                "description": "Get a single movie by ID",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "put": {
                "description": "Update a movie",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "example": "Inception"
                                },
                                "genre": {
                                    "type": "string",
                                    "example": "Sci-Fi"
                                },
                                "year": {
                                    "type": "number",
                                    "example": 2010
                                },
                                "rating": {
                                    "type": "number",
                                    "example": 8.8
                                },
                                "director": {
                                    "type": "string",
                                    "example": "Christopher Nolan"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "delete": {
                "description": "Delete a movie",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        }
    }
}