{
    "swagger": "2.0",
    "info": {
        "title": "Movie Tracker API",
        "description": "API for managing movie information with validation and error handling",
        "version": "2.0.0"
    },
    "host": "cse341-fall2025.onrender.com",
    "basePath": "/",
    "schemes": [
        "https"
    ],
    "paths": {
        "/movies": {
            "get": {
                "description": "Get all movies",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved all movies"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "post": {
                "description": "Create a new movie",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "example": "Inception",
                                    "minLength": 1,
                                    "maxLength": 200
                                },
                                "genre": {
                                    "type": "string",
                                    "example": "Sci-Fi",
                                    "minLength": 2,
                                    "maxLength": 50
                                },
                                "year": {
                                    "type": "integer",
                                    "example": 2010,
                                    "minimum": 1888
                                },
                                "rating": {
                                    "type": "number",
                                    "example": 8.8,
                                    "minimum": 0,
                                    "maximum": 10
                                },
                                "director": {
                                    "type": "string",
                                    "example": "Christopher Nolan",
                                    "maxLength": 100
                                }
                            },
                            "required": [
                                "title",
                                "genre",
                                "year"
                            ]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Movie created successfully"
                    },
                    "400": {
                        "description": "Validation error - invalid input data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/movies/{id}": {
            "get": {
                "description": "Get a single movie by ID",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "MongoDB ObjectId of the movie"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved movie"
                    },
                    "400": {
                        "description": "Invalid ID format"
                    },
                    "404": {
                        "description": "Movie not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "put": {
                "description": "Update a movie",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "MongoDB ObjectId of the movie"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "example": "Inception",
                                    "minLength": 1,
                                    "maxLength": 200
                                },
                                "genre": {
                                    "type": "string",
                                    "example": "Sci-Fi",
                                    "minLength": 2,
                                    "maxLength": 50
                                },
                                "year": {
                                    "type": "integer",
                                    "example": 2010,
                                    "minimum": 1888
                                },
                                "rating": {
                                    "type": "number",
                                    "example": 8.8,
                                    "minimum": 0,
                                    "maximum": 10
                                },
                                "director": {
                                    "type": "string",
                                    "example": "Christopher Nolan",
                                    "maxLength": 100
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Movie updated successfully"
                    },
                    "400": {
                        "description": "Validation error or no fields to update"
                    },
                    "404": {
                        "description": "Movie not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "delete": {
                "description": "Delete a movie",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "MongoDB ObjectId of the movie"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Movie deleted successfully"
                    },
                    "400": {
                        "description": "Invalid ID format"
                    },
                    "404": {
                        "description": "Movie not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}